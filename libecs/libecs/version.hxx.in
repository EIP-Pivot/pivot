#pragma once

// The numeric version format is AAAAABBBBBCCCCCDDDE where:
// 
// AAAAA - major version number
// BBBBB - minor version number
// CCCCC - bugfix version number
// DDD   - alpha / beta (DDD + 500) version number
// E     - final (0) / snapshot (1)
// 
// When DDDE is not 0, 1 is subtracted from AAAAABBBBBCCCCC. For example:
// 
// Version      AAAAABBBBBCCCCCDDDE
// 
// 0.1.0        0000000001000000000
// 0.1.2        0000000001000020000
// 1.2.3        0000100002000030000
// 2.2.0-a.1    0000200001999990010
// 3.0.0-b.2    0000299999999995020
// 2.2.0-a.1.z  0000200001999990011
// 
#define LIBECS_VERSION       $libecs.version.project_number$ULL
#define LIBECS_VERSION_STR   "$libecs.version.project$"
#define LIBECS_VERSION_ID    "$libecs.version.project_id$"
#define LIBECS_VERSION_FULL  "$libecs.version$"

#define LIBECS_VERSION_MAJOR $libecs.version.major$
#define LIBECS_VERSION_MINOR $libecs.version.minor$
#define LIBECS_VERSION_PATCH $libecs.version.patch$

#define LIBECS_PRE_RELEASE   $libecs.version.pre_release$

#define LIBECS_SNAPSHOT_SN   $libecs.version.snapshot_sn$ULL
#define LIBECS_SNAPSHOT_ID   "$libecs.version.snapshot_id$"
